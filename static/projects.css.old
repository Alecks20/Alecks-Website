.project-languages {
    font-size: 12px;
    line-height: 1.5;  
}

.project-box {
    padding: 25px;
    border-radius: 10px;
     background-color: #171a20;
    color: white;
    text-align: left;
    width: 88.5%;
}

.projects-list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    row-gap: 8.5px;
    column-width: 100%;
    align-content: center;
    margin-right: 180px;
    margin-left: 180px;
}


  @media (max-width: 1700px) {
    .projects-list {
        width: 95%;
        margin-right: 0px;
        margin-left: 0px;
        grid-template-columns: repeat(2, 1fr);
        margin: auto;
      }
  }

  @media (max-width: 1000px) {
    .projects-list {
      width: 95%;
      margin-right: 0px;
      margin-left: 0px;
      grid-template-columns: repeat(1, 1fr);
      margin: auto;
    }

  }